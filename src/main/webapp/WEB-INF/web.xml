<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee webapp_4_0.xsd"
         version="4.0">
  <servlet>
    <servlet-name>Jersey REST Service</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>program.rest</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Jersey REST Service</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteModelServlet</servlet-name>
    <servlet-class>program.servlet.delete.DeleteModelServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DeleteModelServlet</servlet-name>
    <url-pattern>/api/delete/model</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetConsumerServlet</servlet-name>
    <servlet-class>program.servlet.get.GetConsumerServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetConsumerServlet</servlet-name>
    <url-pattern>/api/get/consumers</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetLineServlet</servlet-name>
    <servlet-class>program.servlet.get.GetLineServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetLineServlet</servlet-name>
    <url-pattern>/api/get/lines</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetLocaleServlet</servlet-name>
    <servlet-class>program.servlet.get.GetLocaleServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetLocaleServlet</servlet-name>
    <url-pattern>/api/get/locale</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetModelNameServlet</servlet-name>
    <servlet-class>program.servlet.get.GetModelNameServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetModelNameServlet</servlet-name>
    <url-pattern>/api/get/modelName</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetModelServlet</servlet-name>
    <servlet-class>program.servlet.get.GetModelServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetModelServlet</servlet-name>
    <url-pattern>/api/get/model</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetSourceServlet</servlet-name>
    <servlet-class>program.servlet.get.GetSourceServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetSourceServlet</servlet-name>
    <url-pattern>/api/get/sources</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>GetStyleServlet</servlet-name>
    <servlet-class>program.servlet.get.GetStyleServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetStyleServlet</servlet-name>
    <url-pattern>/api/get/style</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PostCalculateServlet</servlet-name>
    <servlet-class>program.servlet.post.PostCalculateServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PostCalculateServlet</servlet-name>
    <url-pattern>/api/post/calculate</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PostSaveModelServlet</servlet-name>
    <servlet-class>program.servlet.post.PostSaveModelServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PostSaveModelServlet</servlet-name>
    <url-pattern>/api/post/saveModel</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <res-ref-name>jdbc/postgres</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
    <res-sharing-scope>Shareable</res-sharing-scope>
  </resource-ref>
</web-app>
